{
  "name": "crypto-u-calculator",
  "version": "1.0.0",
  "description": "Crypto-U Futures Calculator Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.crypto-u.calculator",
    "productName": "Crypto-U Futures Calculator",
    "directories": {
      "output": "dist"  // 确保构建产物输出到 dist 目录
    },
    "files": [
      "**/*",  // 保证将所有文件包含在内
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": "nsis",  // Windows 平台使用 nsis 作为构建目标
      "icon": "icon.ico"  // 添加 Windows 图标（如果有）
    },
    "mac": {
      "target": "dmg",  // macOS 平台使用 dmg 作为构建目标
      "icon": "icon.icns"  // 添加 macOS 图标（如果有）
    },
    "linux": {
      "target": "AppImage",  // Linux 平台使用 AppImage
      "icon": "icon.png"  // 添加 Linux 图标（如果有）
    }
  }
}
